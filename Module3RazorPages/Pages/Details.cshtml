@page "/Details/{id:int}"

@model Module3RazorPages.Pages.DetailsModel

<a href="/">Н<br>а<br>з<br>а<br>д</a>

<div class="movie-card">
    @if (Model.Movie.Photo != null)
    {
        <img src="@Model.Movie.Photo" alt="@Model.Movie.Name">
    }
    <div class="movie-description">
        
        <h2>@Model.Movie.Name</h2>
        <p>@Model.Movie.Description</p>

        <p><b>Режисер</b>:&nbsp;@Model.Movie.Producer</p>

        <p><b>Жанр:</b>&nbsp;@string.Join(", ", Model.Movie.Styles.Select(style => style.Name))</p>
        <br>

        <div>
            @if (Model.Movie.Sessions != null)
            {
                <p><b>Сеанси:</b></p>

                @foreach (var session in Model.Movie.Sessions)
                {
                    <div class="session-details"><p>@session.DateTime.ToString("HH:mm")</p><p>Зал @session.RoomNumber</p></div>
                }
            }
        </div>
    </div>
</div>


<style>
    h2 
    {
        font-size: 50px;
        color: whitesmoke;
    }

    p
    {
        font-size: 20px;
        color: whitesmoke;
    }

    img
    {
        width: 20%;
        height: auto;
    }

    a
    {
        display: block;
        position: fixed;
        top: 50%;
        left: 0;
        transform: translateY(-50%);
        width: 60px;
        padding: 10px;
        font-size: 45px;
        color: gray;
        text-align: center;
        text-decoration: none;
        line-height: 1.5em;
    }

        a:hover {
            text-shadow: 0 15px 30px rgba(0, 0, 0, 0.8);
            color: #A87C7C;
        }



    .movie-card
    {
        display: flex;
        align-items: flex-start;
        position: fixed;
        left: 80px;
        top: 20px;
        bottom: 0;
    }

    .movie-description
    {
        margin-right: 200px; 
        margin-left: 40px;
    }

    .session-details {
        background-color: #7E6363;
        border-radius: 10px;
        list-style-type: none;
        padding: 10px;
        margin-bottom: 10px;
        text-align: center;
        display: inline-block;
        width: 120px;
        height: 40px;
        line-height: 20px;
    }
        .session-details p {
        margin: 0;
            font-size: 25px;
    }

    body {
        background-color: #3E3232;
    }

</style>


